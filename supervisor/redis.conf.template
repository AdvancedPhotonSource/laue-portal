# Redis configuration for local development

# Network
bind 127.0.0.1
port 6379
protected-mode yes

# General
daemonize no
pidfile /var/run/redis.pid
loglevel notice

# Logging
logfile ""

# Data persistence
dir {{SUPERVISOR_DIR}}/redis_data
dbfilename dump.rdb
save 900 1
save 300 10
save 60 10000

# Memory management
maxmemory 256mb
maxmemory-policy allkeys-lru

# Disable dangerous commands
rename-command FLUSHDB ""
rename-command FLUSHALL ""
